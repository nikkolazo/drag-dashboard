---
import Layout from '../layouts/Layout.astro';
import {
  loadAllResults,
  getAvailableCompanies,
  getCompanyYears
} from '../utils/dataLoader';
import { calculateCategoryStats } from '../utils/categoryMapper';

// Load all available DRAG data
const allResults = await loadAllResults();
const companies = await getAvailableCompanies();

// Calculate summary statistics
const totalAnalyses = allResults.length;

// Build company data
const companyData = await Promise.all(
  companies.map(async (company) => {
    const years = await getCompanyYears(company);
    const companyResults = allResults.filter(r => r.metadata.company === company);

    // Calculate overall stats
    const allQuestions = companyResults.flatMap(r => r.questions);
    const stats = calculateCategoryStats(allQuestions);

    return {
      company,
      years: years.sort(),
      yearCount: years.length,
      analyses: companyResults.length,
      stats,
      totalQuestions: allQuestions.length
    };
  })
);
---

<Layout title="Disclosure of Companies - Home">
  <div class="min-h-screen bg-slate-900">
    <!-- Header -->
    <header class="bg-slate-800 border-b border-slate-700">
      <div class="container mx-auto px-6 py-8">
        <h1 class="text-4xl font-bold text-emerald-400 mb-2">
          Disclosure of Companies
        </h1>
        <p class="text-slate-300 text-lg">
          Agricultural Risk Analysis Dashboard
        </p>
        <p class="text-slate-400 text-sm mt-2">
          D-RAG (Document Retrieval-Augmented Generation) baseline validation system
        </p>
      </div>
    </header>

    <!-- Summary Stats -->
    <section class="container mx-auto px-6 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card">
          <div class="text-slate-400 text-sm mb-1">Total Analyses</div>
          <div class="text-3xl font-bold text-emerald-400">{totalAnalyses}</div>
        </div>
        <div class="card">
          <div class="text-slate-400 text-sm mb-1">Companies Analyzed</div>
          <div class="text-3xl font-bold text-blue-400">{companies.length}</div>
        </div>
        <div class="card">
          <div class="text-slate-400 text-sm mb-1">Total Questions</div>
          <div class="text-3xl font-bold text-purple-400">
            {allResults.reduce((sum, r) => sum + r.questions.length, 0)}
          </div>
        </div>
      </div>

      <!-- Company Cards -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {companyData.map((data) => (
          <div class="card hover:border-emerald-500/50 transition-all">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-2xl font-bold text-slate-100 mb-2">
                  {data.company}
                </h2>
                <div class="flex gap-4 text-sm text-slate-400">
                  <span>üìÖ {data.yearCount} years</span>
                  <span>üìä {data.analyses} analyses</span>
                  <span>‚ùì {data.totalQuestions} questions</span>
                </div>
              </div>
              <a
                href={`/${data.company.toLowerCase()}`}
                class="px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg text-sm font-medium transition-colors"
              >
                View Details ‚Üí
              </a>
            </div>

            <!-- Years -->
            <div class="mb-4">
              <div class="text-xs text-slate-400 mb-2">Years Available:</div>
              <div class="flex flex-wrap gap-2">
                {data.years.map(year => (
                  <a
                    href={`/${data.company.toLowerCase()}/${year}`}
                    class="px-3 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs font-medium transition-colors"
                  >
                    {year}
                  </a>
                ))}
              </div>
            </div>

            <!-- Category Stats -->
            <div class="grid grid-cols-3 gap-4 pt-4 border-t border-slate-700">
              <div>
                <div class="text-xs text-slate-400 mb-1">Environmental</div>
                <div class="flex items-baseline gap-1">
                  <span class="text-lg font-semibold text-emerald-400">
                    {data.stats.byClassification.YES}
                  </span>
                  <span class="text-xs text-slate-500">YES</span>
                </div>
              </div>
              <div>
                <div class="text-xs text-slate-400 mb-1">Human Health</div>
                <div class="flex items-baseline gap-1">
                  <span class="text-lg font-semibold text-amber-400">
                    {data.stats.byClassification.PARTIAL}
                  </span>
                  <span class="text-xs text-slate-500">PARTIAL</span>
                </div>
              </div>
              <div>
                <div class="text-xs text-slate-400 mb-1">Transition</div>
                <div class="flex items-baseline gap-1">
                  <span class="text-lg font-semibold text-blue-400">
                    {data.stats.byClassification.UNCLEAR}
                  </span>
                  <span class="text-xs text-slate-500">UNCLEAR</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Footer -->
    <footer class="container mx-auto px-6 py-8 mt-12 border-t border-slate-800">
      <div class="text-center text-slate-500 text-sm">
        <p>D-RAG Dashboard - Agricultural Risk Disclosure Analysis</p>
        <p class="mt-2">Powered by Astro + Tailwind CSS</p>
      </div>
    </footer>
  </div>
</Layout>
